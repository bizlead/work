<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fefefe" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical" >
        
        
        <!-- 注文日時 -->
        <TextView
            android:id="@+id/tv_trans1"
            android:focusable="true"
			android:focusableInTouchMode="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/order_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />
        
        <TextView
            android:id="@+id/tv_trans2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/order_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />
	    
        
	    <!-- レッカーを呼ぶ場所 -->
	    <LinearLayout
	        android:background="@drawable/underline"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="20dp"
	        android:paddingBottom="10dp"
	        android:orientation="vertical" >
	        
	        
	        
	        <TextView
	            android:id="@+id/tv_trans3"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" />
	        
	        <TextView 
	            android:id="@+id/address1"
	            android:layout_width="fill_parent"
            	android:layout_height="wrap_content" />
			
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="right"
	            android:gravity="right"
	            android:orientation="horizontal" >
	
		        <Button
		            android:id="@+id/bt_trans1"
		            android:layout_width="wrap_content"
		            android:layout_height="36dp"
		            android:layout_marginTop="10dp" />
	
	        </LinearLayout>
	    </LinearLayout>
	    
	    <!-- 個人情報の確認 -->
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="20dp"
	        android:id="@+id/ll_per"
	        android:background="@drawable/underline"
	        android:paddingBottom="10dp"
	        android:orientation="vertical" >
	        
	        <TextView
	            android:id="@+id/tv_trans4"
	            android:layout_width="fill_parent"
	            android:layout_marginBottom="20dp"
	            android:layout_height="wrap_content" />
            
            <ListView
	            android:id="@+id/lv_per"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" />
	   
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="right"
	            android:orientation="horizontal" >

	        	<Button
		            android:id="@+id/bt_trans2"
		            android:layout_width="wrap_content"
		            android:layout_height="36dp"
		            android:layout_marginTop="10dp" />	
	        </LinearLayout>
	    </LinearLayout>
        
	    
	   	<!-- 車両情報の確認 -->
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="20dp"
	        android:background="@drawable/underline"
	        android:paddingBottom="10dp"
	        android:orientation="vertical" >
	        
	        <TextView
	            android:id="@+id/tv_trans5"
	            android:layout_width="fill_parent"
	            android:layout_marginBottom="20dp"
	            android:layout_height="wrap_content" />
	        
	        <Spinner
	            android:id="@+id/sp_trans11"
	            android:layout_width="fill_parent"
	            android:layout_marginBottom="20dp"
	            android:layout_height="36dp" />
	        
            <ListView
	            android:id="@+id/lv_car"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" />
            			
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="right"
	            android:gravity="right"
	            android:orientation="horizontal" >
	        	
		        <Button
		            android:id="@+id/bt_trans3"
		            android:layout_width="wrap_content"
		            android:layout_height="36dp"
		            android:layout_marginTop="10dp" />
	
	        </LinearLayout>
	    </LinearLayout>

        
   		<!-- 写真を撮る -->
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="20dp"
	        android:background="@drawable/underline"
	        android:paddingBottom="10dp"
	        android:orientation="vertical" >
    
            <TextView
                android:id="@+id/tv_trans6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            
            <Button
                android:id="@+id/bt_trans4"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
		        android:layout_marginTop="10dp"
		        android:layout_marginBottom="20dp"
                android:layout_gravity="right" />
            <ImageView
                android:id="@+id/iv_camera"
                android:src="@drawable/camera5"
                android:layout_width="fill_parent"
                android:layout_height="185dp" />
            
	    </LinearLayout>

	    
	    <Button
	        android:id="@+id/bt_trans6"
	        android:layout_width="fill_parent"
	        android:layout_height="36dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp" />
	    
		    
    </LinearLayout>
</ScrollView>